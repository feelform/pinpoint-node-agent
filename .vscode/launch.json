    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "run all test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "${workspaceFolder}/test/**/*.test.js"
            ],
            "program": "${workspaceFolder}/node_modules/tape/bin/tape"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "run current test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "${file}"
            ],
            "program": "${workspaceFolder}/node_modules/tape/bin/tape"
        }
    ]
}